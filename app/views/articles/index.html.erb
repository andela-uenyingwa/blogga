<h1 class="articles-header">All Articles</h1>
<div class="row container" id="articles-row">
  <% @articles.each do |article| %>
    <div class="card col s4 articles-card">
      <div class="card-image">
        <% if article.image.exists? %>
          <%= image_tag article.image.url %>
        <% else %>
          <img class src="http://lorempixel.com/400/200">
        <% end %>
      </div>
      <div class="card-content">
        <%= link_to article.title, article_path(article) %>
      </div>
    </div>
  <% end %>
</div>

